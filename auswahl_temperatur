def temp_gueltig(temp):
    if -20 <= temp <= 40:
        print(temp, "°C")
        return True
    else:
        print("Die Temperatur liegt nicht im Geltungsbereich. \n"
              "Bitte wählen sie eine Temperatur zwischen -20 und 40°C")
        return False


def check_type():  # Typkontrolle und Eingabe: Programmabbruch durch die Konvertierung eines Strings
    korrekte_eingabe = False  # (bspw. "a", ".", usw) zu float verhindern
    while korrekte_eingabe == False:
        try:
            x = int(input("Eingabe: "))
            korrekte_eingabe = True
            return x
        except ValueError:
            print("Bitte geben Sie eine Zahl ein")


def randbedingung_aussen():
    korrekte_eingabe = False
    korrekt_diff = False
    korrekt_t = False
    korrekt_temp = False
    korrekt_min = False
    korrekt_max = False

    print("\n\nStandardwerte für die Aussentemperatur:\n   Mindesttemperatur im Januar: 1°C\n   "
          "Maximaltemperatur im Juli: 20°C\n   Tagesschwankung: 4°C\n   Zeitpunkt der Tagestiefsttemperatur: 2Uhr")
    while korrekte_eingabe == False:
        print("\nMöchten Sie Standardwerte für den Temperaturverlauf verwenden? 'j' = ja oder 'n' = nein ?")
        s = input("Eingabe: ")
        if s.lower() == "j":
            temp_min = 1
            temp_max = 20
            temp_diff = 4
            tmin = 2

            korrekte_eingabe = True

        elif s.lower() == "n":
            print("\nGeben Sie die Tagesschwankung an. Diese muss zwischen 4°C und 15°C liegen")
            while korrekt_diff == False:
                temp_diff = check_type()
                if 4 <= temp_diff <= 15:
                    korrekt_diff = True
                else:
                    print("Die Tagesschwankung liegt in einem unrealistischen Bereich.")

            print("\nGeben sie den Zeitpunkt an, zu der die geringste Temperatur vorliegt. "
                  "Dieser muss zwischen 0 und 5 Uhr nachts liegen")
            while korrekt_t == False:
                tmin = check_type()
                if 0 <= tmin <= 5:
                    korrekt_t = True
                else:
                    print("Dieser Zeitpunkt ist unzulässig. Bitte tätigen Sie eine gültige Eingabe.")

            print("\nBitte wählen sie eine Temperatur zwischen -20 und 40°C")
            while korrekt_temp == False:
                while korrekt_min == False:
                    print("\nGeben Sie die geringste Temperatur für den 1. Januar ein: ")
                    temp_min = check_type()
                    korrekt_min = temp_gueltig(temp_min)

                while korrekt_max == False:
                    print("\nGeben Sie die maximale Temperatur für den 1. Juli ein: ")
                    temp_max = check_type()
                    korrekt_max = temp_gueltig(temp_max)

                if temp_min < temp_max:
                    korrekt_temp = True
                else:
                    korrekt_min = False
                    korrekt_max = False
                    print("Die Höchsttemperatur muss größer als die Tiefsttemperatur sein.")
            korrekte_eingabe = True
        else:
            print("Bitte tätigen Sie eine gültige Eingabe.")
    return temp_min, temp_max, temp_diff, tmin


def datum_wählen():
    daten_original = list()

    print("\n\nWie viele Tage sollen im Tagesvergleich betrachtet werden? \n")
    anzahl_tage = check_type()
    for index in range(anzahl_tage):
        daten_original.append(input("Bitte geben sie die zu vergleichenden Tage im Format 'dd.mm' ein \n"))

    daten_drucken = list()
    for day in daten_original:
        daten_drucken.append((int(day.split(".")[0]), int(day.split(".")[1])))

    return daten_drucken, daten_original
