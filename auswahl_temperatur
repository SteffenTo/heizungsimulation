def temp_gueltig(temp):
    if -20 <= temp <= 40:
        print(temp, "°C")
        return True
    else:
        print("Die Temperatur liegt nicht im Geltungsbereich. \n"
              "Bitte wählen sie eine Temperatur zwischen -20 und 40°C.")
        return False


def check_type():  # Typkontrolle und Eingabe: Programmabbruch durch die Konvertierung eines Strings
    korrekte_eingabe = False  # (bspw. "a", ".", usw) zu float verhindern
    while korrekte_eingabe == False:
        try:
            x = int(input("Eingabe: "))
            korrekte_eingabe = True
            return x
        except ValueError:
            print("Bitte geben Sie eine Zahl ein.")


def randbedingung_aussen():
    korrekte_eingabe = False
    korrekt_diff = False
    korrekt_t = False
    korrekt_temp = False
    korrekt_min = False
    korrekt_max = False

    print("\n\nStandardwerte für die Aussentemperatur:\n   Mindesttemperatur im Januar: 1 °C\n   "
          "Maximaltemperatur im Juli: 20 °C\n   Tagesschwankung: 4 °C\n   Zeitpunkt der Tagestiefsttemperatur: 2 Uhr")
    while korrekte_eingabe == False:
        print("\nMöchten Sie Standardwerte für den Temperaturverlauf verwenden? 'j' = ja oder 'n' = nein?")
        s = input("Eingabe: ")
        if s.lower() == "j":
            temp_min = 1
            temp_max = 20
            temp_diff = 4
            tmin = 2

            korrekte_eingabe = True

        elif s.lower() == "n":
            print("\nGeben Sie die Tagesschwankung an. Diese muss zwischen 4 °C und 15 °C liegen.")
            while korrekt_diff == False:
                temp_diff = check_type()
                if 4 <= temp_diff <= 15:
                    korrekt_diff = True
                else:
                    print("Die Tagesschwankung liegt in einem unrealistischen Bereich.")

            print("\nGeben sie den Zeitpunkt an, zu der die geringste Temperatur vorliegt. "
                  "Dieser muss zwischen 0 und 5 Uhr nachts liegen.")
            while korrekt_t == False:
                tmin = check_type()
                if 0 <= tmin <= 5:
                    korrekt_t = True
                else:
                    print("Dieser Zeitpunkt ist unzulässig. Bitte tätigen Sie eine gültige Eingabe.")

            print("\nBitte wählen sie eine Temperatur zwischen -20 und 40°C.")
            while korrekt_temp == False:
                while korrekt_min == False:
                    print("\nGeben Sie die geringste Temperatur für den 1. Januar ein: ")
                    temp_min = check_type()
                    korrekt_min = temp_gueltig(temp_min)

                while korrekt_max == False:
                    print("\nGeben Sie die maximale Temperatur für den 1. Juli ein: ")
                    temp_max = check_type()
                    korrekt_max = temp_gueltig(temp_max)

                if temp_min < temp_max:
                    korrekt_temp = True
                else:
                    korrekt_min = False
                    korrekt_max = False
                    print("Die Höchsttemperatur muss größer als die Tiefsttemperatur sein.")
            korrekte_eingabe = True
        else:
            print("Bitte tätigen Sie eine gültige Eingabe.")
    return temp_min, temp_max, temp_diff, tmin


def randbedingung_innen():
    korrekte_eingabe = False #Abbruchbedinungen für while-Schleifen
    korrekt_tag = False
    korrekt_nacht = False
    korrekt_t1 = False
    korrekt_t2 = False

    #Untersuchungsparameter aus der Aufgabenstellung
    print("\n\nStandardwerte für die Raumtemperatur:\n   Tagestemperatur: 21°C\n   Nachttemperatur: 18°C\n   "
          "Zeitpunkt, ab dem die Tagestiefsttemperatur vorliegen soll: 7 Uhr\n   "
          "Zeitpunkt, ab dem die Nachttemperatur vorliegen soll: 22 Uhr")

    while korrekte_eingabe == False:
        print("\nMöchten Sie Standardwerte für den Raumtemperaturverlauf verwenden? 'j' = ja oder 'n' = nein ?")
        s = input("Eingabe: ")
        if s.lower() == "j":    #mit Untersuchungsparametern weiterrechnen
            t_tag = 21
            t_nacht = 18
            t1 = 7
            t2 = 22
            korrekte_eingabe = True

        elif s.lower() == "n": #mit eigenen Parametern rechnen
            print("\nGeben Sie an, welche Innentemperatur tagsüber angestrebt wird."
                  "Die Wahl muss zwischen 19 und 23°C liegen.")
            while korrekt_tag == False: #Wahl der gewünschten Innentemperatur am Tag
                t_tag = check_type()
                if 19 <= t_tag <= 23:
                    korrekt_tag = True  #erfolgreich für korrekt_tag = True
                else:   #fehlerhafte Eingabe --> neue Eingabe
                    print("Diese Temperatur ist unzulässig. Bitte tätigen Sie eine gültige Eingabe.")

            print("\nGeben Sie an, welche Innentemperatur nachts angestrebt wird."
                  "Die Wahl muss zwischen 16 und 19°C liegen.")

            while korrekt_nacht == False: #Wahl der gewünschten Innentemperatur in der Nacht
                t_nacht = check_type()      #erfolgreich für korrekt_tag = True
                if 16 <= t_nacht <= 19:
                    korrekt_nacht = True
                else:   #fehlerhafte Eingabe --> neue Eingabe
                    print("Diese Temperatur ist unzulässig. Bitte tätigen Sie eine gültige Eingabe.")

            print("\nGeben Sie an, ab welchem Zeitpunkt, die Tagestemperatur vorliegen soll. "
                  "Dieser muss zwischen 5 und 9 Uhr morgens liegen")
            while korrekt_t1 == False:  #Wahl des Zeitpunkts, ab dem t_tag gelten soll
                t1 = check_type()
                if 5 <= t1 <= 9:
                    korrekt_t1 = True   #erfolgreich für korrekt_t1 = True
                else:   #fehlerhafte Eingabe --> neue Eingabe
                    print("Dieser Zeitpunkt ist unzulässig. Bitte tätigen Sie eine gültige Eingabe.")

            print("\nGeben Sie an, ab welchem Zeitpunkt, die Nachttemperatur vorliegen soll. "
                  "Dieser muss zwischen 20 und 23 Uhr abends liegen")
            while korrekt_t2 == False:  #Wahl des Zeitpunkts, ab dem t_nacht gelten soll
                t2 = check_type()
                if 20 <= t2 <= 23:
                    korrekt_t2 = True   #erfolgreich für korrekt_t2 = True
                else:   #fehlerhafte Eingabe --> neue Eingabe
                    print("Dieser Zeitpunkt ist unzulässig. Bitte tätigen Sie eine gültige Eingabe.")
            korrekte_eingabe = True
        else:   #fehlerhafte Eingabe --> neue Eingabe
            print("Bitte tätigen Sie eine gültige Eingabe.")
    return (t_tag, t_nacht, t1, t2)


def datum_wählen():
    daten_original = list()

    print("Wie viele Tage sollen im Tagesvergleich betrachtet werden?")
    anzahl_tage = check_type()
    korrekte_eingabe = False
    while korrekte_eingabe == False:
        for index in range(anzahl_tage):
            inp = input("Bitte geben Sie die zu vergleichenden Tage im Format 'dd.mm' ein. \n")
            daten_original.append(inp)

        daten_drucken = list()
        try:
            for day in daten_original:
                #Fehlersuche: wurde ein existentes Datum angegeben?
                if int(day.split(".")[0]) > 30 or int(day.split(".")[1]) > 12:
                    # falls das Datum nicht existiert
                    raise ValueError("Format Fehler")
                daten_drucken.append((int(day.split(".")[0]), int(day.split(".")[1])))
            korrekte_eingabe = True
        #mögliche Fehler: ValueError: Eingabe eines Wertes, welcher außerhalb des Geltungsbereichs liegt
                          #IndexError: Eingabe eines Zeichens, dass sich nicht in int umwandeln lässt
        except (ValueError, IndexError) as e:
            print("Fehler in Eingaben (", e.args[0], ")! Erneute Eingabe mit", anzahl_tage, "Tag(en):")
            daten_original = list()

    return daten_drucken, daten_original
